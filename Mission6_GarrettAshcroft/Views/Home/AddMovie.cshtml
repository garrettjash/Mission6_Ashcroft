@{
}

@{
    ViewData["Title"] = "Add a Movie";
}
<h1>@ViewData["Title"]</h1>

@model AddMovie

@* Form to add a movie *@
<form method="post">
    <input type="hidden" asp-for="MovieId" />

@*     Access the categories dynamically through te view bag *@
    <label asp-for="CategoryId">Category</label>
    <select asp-for="CategoryId">
        @foreach (Categories c in ViewBag.Categories)
        {
            <option value="@c.CategoryId">@c.Category</option>
        }
    </select>
    <br />
    <label asp-for="Title">Title</label>
    <input asp-for="Title" />
    <br />
    <label asp-for="Year">Year</label>
    <input asp-for="Year" />
    <br />
    <label asp-for="Director">Director</label>
    <input asp-for="Director" />
    <br />
    <label asp-for="Rating">Rating</label>
    <select asp-for="Rating" >
        <option>G</option>
        <option>PG</option>
        <option>PG-13</option>
        <option>R</option>
    </select>
    <br />
    <label asp-for="Edited">Edited</label>
    <select asp-for="Edited">
        <option value="0">No</option>
        <option value="1">Yes</option>
    </select>
    <br />
    <label asp-for="LentTo">Lent To</label>
    <input asp-for="LentTo"/>
    <br />
    <label asp-for="CopiedToPlex">Copied To Plex</label>
    <select asp-for="CopiedToPlex">
        <option value="0">No</option>
        <option value="1">Yes</option>
    </select>
    <br />
    <label asp-for="Notes">Notes</label>
    <input asp-for="Notes" maxlength="25" />
    <br />
    <br />
    <button class="btn btn-info" type="submit">Add Movie!</button>

    <div asp-validation-summary="All"></div>
</form>